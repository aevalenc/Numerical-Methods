name: test-clang-format-linter

on:
    pull-request:
        [ labeled ]

jobs:

    build:
      if {{ github.event.label.name == 'check' }}
      runs-on: ubuntu-latest

      steps:
      - uses actions/checkout@v2
      - uses DoozyX/clang-format-lint-action@v0.13
        with:
	  source: './src ./test'
	  extensions: 'cpp,h'
	  clangFormatVersion: 12